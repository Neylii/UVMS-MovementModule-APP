<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:ext="http://www.liquibase.org/xml/ns/dbchangelog-ext" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog-ext http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-ext.xsd http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.0.xsd">

    <changeSet author="jojoha" id="Create table areatransition">
        
        <createTable tableName="areatransition">
            <column name="areatran_id" type="bigint" remarks="The synthetic key.">
                <constraints nullable="false" primaryKey="true" primaryKeyName="areatran_pk"/>
            </column>
            
            <column name="areatran_area_id" type="bigint" remarks="FK to area."/>
            <column name="areatran_movetype_id" type="bigint" remarks="FK to movementtype."/>
            <column name="areatran_move_id" type="bigint" remarks="FK to movement"/>

            <column name="areatran_updattim" type="timestamp" remarks="Last updated date time.">
                <constraints nullable="false"/>
            </column>
            <column name="areatran_upuser" type="varchar(60)" remarks="Last update userid.">
                <constraints nullable="false"/>
            </column>

        </createTable>
        
        <addForeignKeyConstraint constraintName="areatran_area_fk" referencedTableName="area" referencedColumnNames="area_id" baseColumnNames="areatran_area_id" baseTableName="areatransition"/>
        <addForeignKeyConstraint constraintName="areatran_movetype_fk" referencedTableName="movementtype" referencedColumnNames="movetyp_id" baseColumnNames="areatran_movetype_id" baseTableName="areatransition"/>
        <addForeignKeyConstraint constraintName="areatran_move_fk" referencedTableName="movement" referencedColumnNames="move_id" baseColumnNames="areatran_move_id" baseTableName="areatransition"/>
        
        <rollback>
            <dropTable tableName="areatransition"/>
        </rollback>
        
    </changeSet>
    
</databaseChangeLog>

