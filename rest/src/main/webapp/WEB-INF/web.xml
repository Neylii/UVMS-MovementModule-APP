<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
		 xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd" version="3.0"
		 xmlns="http://java.sun.com/xml/ns/javaee">

    <context-param>
        <param-name>usmApplication</param-name>
        <param-value>Audit</param-value>
    </context-param>

	<filter>
		<filter-name>AuthenticationFilter</filter-name>
		<filter-class>eu.europa.ec.fisheries.uvms.rest.security.AuthenticationFilter</filter-class>
		<async-supported>true</async-supported>
	</filter>
	<filter-mapping>
		<filter-name>AuthenticationFilter</filter-name>
		<url-pattern>/rest/areas/*</url-pattern>
		<url-pattern>/rest/config/*</url-pattern>
		<url-pattern>/rest/movement/*</url-pattern>
		<url-pattern>/rest/search/*</url-pattern>
		<url-pattern>/rest/tempmovement/*</url-pattern>
		<url-pattern>/rest/segment/*</url-pattern>
		<url-pattern>/rest/track/*</url-pattern>
		<url-pattern>/rest/sse/*</url-pattern>
	</filter-mapping>

</web-app>